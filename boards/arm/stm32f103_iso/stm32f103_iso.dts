/dts-v1/;
#include <st/f1/stm32f103Xe.dtsi>
#include <st/f1/stm32f103z(c-d-e)tx-pinctrl.dtsi>

/ {
	model = "stm32f103_mini board";
	compatible = "st,stm32f103";

	chosen {
		zephyr,console = &usart1;
		zephyr,shell-uart = &usart1;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,canbus = &can1;
	};

	leds {
		compatible = "gpio-leds";
		led_2: led_2 {
			gpios = <&gpiof 7 GPIO_ACTIVE_LOW>;
			label = "User LD2";
		};
		led_3: led_3 {
			gpios = <&gpiof 8 GPIO_ACTIVE_LOW>;
			label = "User LD2";
		};
	};

        gpio_keys {
                compatible = "gpio-keys";
                button1: button1 {
                        label = "User button1";
                        gpios = <&gpioa 0 GPIO_ACTIVE_HIGH>;
                };
                button2: button2 {
                        label = "User button2";
                        gpios = <&gpioc 13 GPIO_ACTIVE_HIGH>;
                };
        };

	pwmleds {
                compatible = "pwm-leds";
                status = "okay";

                pwm_led_1: pwm_led_1 {
                        pwms = <&pwm3 3 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
                };
        };

	aliases {
		led0 = &led_2;
		sw0 = &button1;
		i2c0 = &i2c1;
		eeprom-0 = &eeprom0;
		spi-flash0 = &w25q64cv;
		watchdog0 = &iwdg;
		pwm-led0 = &pwm_led_1;
	};
};

&clk_lsi {
        status = "okay";
};

&clk_hse {
	clock-frequency = <DT_FREQ_M(8)>;
	status = "okay";
};

&pll {
	mul = <9>;
	clocks = <&clk_hse>;
	status = "okay";
};

&rcc {
	clocks = <&pll>;
	clock-frequency = <DT_FREQ_M(72)>;
	ahb-prescaler = <1>;
	apb1-prescaler = <2>;
	apb2-prescaler = <1>;
};

&usart1 {
	pinctrl-0 = <&usart1_tx_pa9 &usart1_rx_pa10>;
	pinctrl-names = "default";
	current-speed = <115200>;
	status = "okay";
};

&usart2 {
        pinctrl-0 = <&usart2_tx_pa2 &usart2_rx_pa3>;
        pinctrl-names = "default";
        current-speed = <115200>;
        status = "okay";
        /* PB5 can select RS-485 TX  */
};

&i2c1 {
        pinctrl-0 = <&i2c1_scl_pb6 &i2c1_sda_pb7>;
        pinctrl-names = "default";
        status = "okay";
        clock-frequency = <I2C_BITRATE_FAST>;

        eeprom0: eeprom@50 {
                compatible = "atmel,at24";
                reg = <0x50>;
                status = "okay";
                size = <256>;
                pagesize = <8>;
                address-width = <8>;
                timeout = <5>;
        };
};

&spi1 {
	pinctrl-0 = <&spi1_nss_master_pa4 &spi1_sck_master_pa5
			&spi1_miso_master_pa6 &spi1_mosi_master_pa7>;
        pinctrl-names = "default";
        status = "okay";
        cs-gpios = <&gpioa 4 GPIO_ACTIVE_LOW>;
        w25q64cv: w25q64cv@0 {
                compatible = "jedec,spi-nor";
                status = "okay";
                reg = <0>;
                spi-max-frequency = <20000000>;
                size = <0x4000000>;
                has-dpd;
                t-enter-dpd = <4000>;
                t-exit-dpd = <25000>;
                jedec-id = [ef 40 17];
        };
};

&iwdg {
        status = "okay";
};

&rtc {
        clocks = <&rcc STM32_CLOCK_BUS_APB1 0x10000000>,
                 <&rcc STM32_SRC_LSI RTC_SEL(2)>;
        status = "okay";
};

&can1 {
        pinctrl-0 = <&can_rx_remap1_pb8 &can_tx_remap1_pb9>;
        pinctrl-names = "default";
        bus-speed = <125000>;
        status = "okay";
};

&adc1 {
        pinctrl-0 = <&adc1_in0_pa0>;
        pinctrl-names = "default";
        status = "okay";
};

&dac1 {
        status = "disabled";
        /* dac output pins(pa4,pa5) might conflict with spi1 pins */
        pinctrl-0 = <&dac_out1_pa4>;
        /* pinctrl-0 = <&dac_out2_pa5>; */
        pinctrl-names = "default";
};

&flash0 {
        partitions {
                compatible = "fixed-partitions";
                #address-cells = <1>;
                #size-cells = <1>;

                /* Set 12Kb of storage at the end of the 512Kb of flash */
                storage_partition: partition@7d000 {
                        label = "storage";
                        reg = <0x0007d000 DT_SIZE_K(12)>;
                };
        };
};

&timers3 {
        st,prescaler = <10000>;
        status = "okay";

        pwm3: pwm {
                status = "okay";
                pinctrl-0 = <&tim3_ch3_pwm_pb0>;
                pinctrl-names = "default";
        };
};
